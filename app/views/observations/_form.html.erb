<%= simple_form_for Observation.new do |f| %>
  <%= f.association :membership, as: :select, collection: user.memberships.map{|m| [m.cohort.name, m.id]} %>
  <%= f.select :status, Observation.statuses %>
  <%= f.text_area :body, placeholder: "Write your observation." %>
  <%= f.submit "Submit new observation" %>
<% end %>
