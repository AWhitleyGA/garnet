<div class="intro">
  <%= avatar(@user) %>
  <h2 class='membership'><%= link_to @user.name, @user %> in <%= link_to @membership.cohort.name, @membership.cohort %></h2>
</div>

<% if can? :manage, @membership.cohort %>
  <%= tag_list @membership %>
<% end %>

<% if @is_current_user  %>
  <% @current_attendances.each do |attendance| %>
    <%= form_tag self_take_attendance_path(attendance), method: :put do  %>
      <%= button_tag "Check In for #{attendance.event.title}" %>
    <% end %>
  <% end %>
<% end %>


<% if @observations %>
  <section>
    <h3 class="fold" id="observations"><a href="#observations"><%= @user.first_name %>'s Observations</a></h3>
    <div>
      <%= render @observations %>
      <section>
        <h4>New Observation</h4>
        <%= render partial: "observations/form", locals: {user: @user, membership: @membership} %>
      </section>
    </div>
  </section>
<% end %>

<% if @attendances.count > 0 %>
  <section>
    <h3 class="fold" id="attendances"><a href="#attendances"><%= @user.first_name %>'s Attendance</a></h3>
    <p>Present: <%= @attendances.present.count %>, Tardy: <%= @attendances.tardy.count %>, Absent: <%= @attendances.absent.count %></p>
    <div>
        <%= render partial: "attendances/table", locals: {attendances: @attendances} %>
    </div>
  </section>
<% end %>

<% if @submissions.count > 0 %>
  <section>
    <h3 class="fold" id="submissions"><a href="#submissions"><%= @user.first_name %>'s Homework Submissions</a></h3>
    <p>Percent Complete: <%= percent_of(@submissions, "complete") %>%</p>
    <div>
      <%= render partial: "submissions/table", locals: {submissions: @submissions} %>
    </div>

    <section>
      <h4>Instructor Notes on Submissions</h4>
      <% @submissions_with_notes.each do |submission| %>
        <section>
          <h5><%= submission.assignment.title %></h5>
          <%= markdown(submission.grader_notes) %>
        </section>
      <% end %>
    </section>
  </section>
<% end %>


<section>
  <h3>Profile</h3>
  <%= render partial: "users/form" %>
  <% if @user.github_id %>
    <%= link_to "Refresh Github info", gh_refresh_user_path(@user), class: "button" %>
  <% end %>
</section>
