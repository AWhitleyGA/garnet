<% data = { present:     { value: membership.percent_from_status(:attendances, 2), type: :good},
            tardy:       { value: membership.percent_from_status(:attendances, 1), type: :bad },
            absent:      { value: membership.percent_from_status(:attendances, 0), type: :bad },
            hw_complete: { value: membership.percent_from_status(:submissions, 2), type: :good }} %>

<% data.each do |name, datum| %>
  <td class="<%= color_of_percent(datum[:value], datum[:type]) %>">
    <% if datum[:value] %>
      <%= datum[:value] %>%
    <% else %>
      N/A
    <% end %>
  </td>
<% end  %>
