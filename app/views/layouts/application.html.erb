<!DOCTYPE html>
<html>
<head>
  <title>Garnet</title>
  <meta name="viewport" content="width=device-width">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.png' %>
</head>
<body>
  <nav class="site-wide">
    <header>
      <h1><%= link_to root_path do %><span>GA</span>RNET<% end %></h1>
    </header>
    <ul>
      <% if signed_in? %>
      <li><%= link_to current_user.username, user_path(current_user) %></li>
      <li><%= link_to "sign out", sign_out_path %></li>
      <% else %>
      <li><%= link_to "sign up", new_user_path %></li>
      <li><%= link_to "sign in", sign_in_path %></li>
      <% end %>
    </ul>
  </nav>
  <main>
    <% if flash.count > 0 %>
      <section class="errareHumanumEst">
      <% flash.each do |key, value| %>
        <p><%= simple_format(value) %></p>
      <% end %>
      </section>
    <% end %>
    <%= yield %>
  </main>
  <footer>
    <div class="mantra">
      <p><%= Mantra.all.sample.html_safe %></p>
    </div>
    <div class="links">
      <a class="fa fa-code-fork" href="https://github.com/ga-dc/garnet" target="_blank">GitHub</a>
    </div>
  </footer>
  <%= javascript_include_tag 'application' %>
  <script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
    ga('create', 'UA-74079333-1', 'auto');
    ga('send', 'pageview');
  </script>
</body>
</html>
