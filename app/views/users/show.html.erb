<div class="intro">
  <%= avatar(@user) %>
  <h2><%= @user.name %></h2>
</div>

<section id="cohorts_section">
  <h3>Cohorts you Admin</h3>
  <% if @user.memberships.count == 0 %>
    <p>None yet!</p>
  <% else %>
    <% @admin_memberships.each do |membership| %>
      <%= link_to membership.cohort.name, membership.cohort%>
    <% end %>
  <% end %>
</section>

<section id="cohorts_section">
  <h3>Cohorts of Which You're a Member</h3>
  <% if @user.memberships.count == 0 %>
    <p>None yet!</p>
  <% else %>
    <%= render partial: "memberships/cohorts_table", locals: {
                                              memberships: @non_admin_memberships,
                                              header: "#{@user.name}'s Memberships",
                                              row_header: :cohort } %>
  <% end %>
</section>

<section>
  <h3>Profile</h3>
  <%= render partial: "form" %>
  <% if @user.github_id %>
    <%= link_to "Refresh Github info", gh_refresh_user_path(@user), class: "button" %>
  <% end %>
</section>
